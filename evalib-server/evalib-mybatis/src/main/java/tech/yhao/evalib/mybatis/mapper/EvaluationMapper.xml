<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.yhao.evalib.mybatis.mapper.EvaluationMapper">
	<sql id="evaluationColumns">
		id, name,
		description,
		created_by as createdBy,
		created_at as
		createdAt,
		updated_at as
		updatedAt,
		state
	</sql>

	<insert id="insert" parameterType="Evaluation" useGeneratedKeys="true"
		keyProperty="id" keyColumn="id">
		insert into t_evaluation(name,
		description,
		created_by,
		state,
		created_at, updated_at)
		values(#{name}, #{description},
		#{createdBy}, #{state},
		now(),
		now())
	</insert>

	<insert id="delete" parameterType="uuid">
		delete from t_evaluation where
		id=#{evaluationId}
	</insert>

	<select id="listAll" resultType="Evaluation">
		select
		<include refid="evaluationColumns"></include>
		from t_evaluation
	</select>

	<select id="findById" parameterType="uuid" resultType="Evaluation">
		select
		<include refid="evaluationColumns"></include>
		from t_evaluation
		where id=#{id}
	</select>

	<select id="findByName" parameterType="string" resultType="Evaluation">
		select
		<include refid="evaluationColumns"></include>
		from
		t_evaluation
		where name like concat('%', #{name}, '%')
	</select>
</mapper>